<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ibaitxo.movilidadreducida.MapsActivity">

    <Button
        android:id="@+id/verMapa"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:onClick="verMapa"
        android:text="@string/ver_mapa"
        app:layout_constraintBottom_toTopOf="@+id/anadirZona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/anadirZona"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:onClick="anadirZona"
        android:text="@string/a_adir_zona"
        app:layout_constraintBottom_toTopOf="@+id/salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verMapa" />

    <Button
        android:id="@+id/salir"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        android:layout_marginEnd="307dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="@string/salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anadirZona" />

</android.support.constraint.ConstraintLayout>
